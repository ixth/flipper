.input
    display: inline-block
    margin-right: 12px
    padding: 10px 15px
    border-radius: 5px
    background: #fff
    font: italic 13px/16px 'Arial', sans-serif

    &__input
        vertical-align: top
        width: 100%
        height: 16px
        padding: 0
        border: none
        background: none
        color: #3e444f
        font: italic 13px 'Arial', sans-serif

    &_wide
        display: block
