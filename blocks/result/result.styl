.result
    padding: 30px 0 30px 20px
    background: #fff

    &__info
        overflow: hidden
        padding: 20px

    &__img
        float: left
        margin-right: 17px

    &__right
        width: 160px
        float: right

    &__title
        font: bold 25px 'Rothonda', sans-serif
        margin-bottom: 6px

    &__area
        font-size: 14px
        margin-bottom: 9px

    &__themes
        opacity: .7
        font-size: 11px
        font-style: italic

    &__theme
        text-decoration: none
        color: inherit

    &__category
        height: 50px
        margin-left: 10px
        margin-bottom: 30px
        padding-left: 10px
        border-left: 1px solid #bfcbd1
        font: bold 13px 'Rothonda', sans-serif
        text-transform: uppercase

    &__map
        font: italic 12px 'Arial', sans-serif
        color: #40afe3
        text-decoration: none

    &__fav
        font: italic 11px 'Arial', sans-serif
        text-decoration: none

    &__note
        font: normal 11px 'Arial', sans-serif
        color: #9c9da0

    &__special
        font: normal 11px 'Arial', sans-serif

    &__buy
        font: bold 13px 'Rothonda', sans-serif
        color: #407fb7
        text-transform: uppercase

    &_theme_blue &__info
        background: #edf3f7

    &_theme_brown &__info
        background: #f7f7ed
